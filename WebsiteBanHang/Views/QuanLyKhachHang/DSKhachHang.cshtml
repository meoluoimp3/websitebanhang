@using WebsiteBanHang.Models;
@model IEnumerable<user>

@{
    ViewBag.Title = "DSKhachHang";
    Layout = "~/Views/Layout/AdminLayout.cshtml";

    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
}

<h2>Danh sách khách hàng</h2>
@grid.GetHtml(
    tableStyle: "gridTable",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
        grid.Column("Id", "Mã KH"),
        grid.Column("name", "Tên Khách Hàng"),
        grid.Column("username", "Tên đăng nhập"),
        grid.Column("phone", "Số điện thoại"),
        grid.Column("email", "Email"),
        grid.Column(format: p => Html.ActionLink("Xóa", "Xoa", new { id = p.Id }))
        )
    )

<style>
    .gridHead {
        background-color: #5b5a53
    }

        .gridHead > th > a {
            color: white
        }
    /*.gridRow{
        color:black;
        background-color:blue
    }*/
    .gridAltRow {
        border: 1px solid black;
    }

    .gridFooter {
        font-weight: bold
    }

    .gridTable {
        width: 100%;
        border: 1px solid black
    }

        .gridTable > th, td {
            border: 1px solid #5b5a53;
            text-align: center;
        }
</style>