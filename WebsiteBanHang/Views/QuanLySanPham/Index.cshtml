@using WebsiteBanHang.Models;

@model IEnumerable<product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";

    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
}
<br />
<h2>Danh sách sản phẩm</h2>
<br />
@grid.GetHtml(
    tableStyle: "gridTable",
    headerStyle:"gridHead",
    footerStyle:"gridFooter",
    rowStyle:"gridRow",
    alternatingRowStyle:"gridAltRow",
    columns:grid.Columns(
        grid.Column("Id","Mã SP"),
        grid.Column("name", "Tên Sản phẩm"),
        grid.Column("price", "Giá Sản phẩm"),
        grid.Column("image1", "Hình Ảnh", format: p => Html.Raw("<img src=\"../Content/HinhAnhSP/" + p.image1 + "\" style=\"height:100px;width:150px\">")),
        grid.Column(format: p => Html.ActionLink("Chỉnh sửa", "ChinhSua", new { id = p.Id })),
        grid.Column(format: p => Html.ActionLink("Xóa", "Xoa", new { id = p.Id }))
        )
    )

<style>
    .gridHead {
        background-color: #5b5a53
    }

        .gridHead > th > a {
            color: white
        }
    /*.gridRow{
        color:black;
        background-color:blue
    }*/
    .gridAltRow {
        border: 1px solid black;
    }

    .gridFooter {
        font-weight: bold
    }

    .gridTable {
        width: 100%;
        border: 1px solid black
    }

        .gridTable > th, td {
            border: 1px solid #5b5a53;
            text-align: center;
        }
</style>