@using WebsiteBanHang.Models;
@using PagedList.Mvc;

@model PagedList.IPagedList<product>
@{
    ViewBag.Title = "KetQuaTimKiem";
    Layout = "~/Views/Layout/HomeLayout.cshtml";
}

<div class="banner1">
    <div class="container">
        <h3><a href="index.html">Trang chủ</a> / <span>Sản phẩm</span></h3>
    </div>
</div>
<div class="content">
    <div class="products-agileinfo">
        <h2 class="tittle">Tìm kiếm</h2>
        <div class="container">
            <div class="product-agileinfo-grids w3l">

                <div class="col-md-12 product-agileinfon-grid1 w3l">


                    <div class="bs-example bs-example-tabs" role="tabpanel" data-example-id="togglable-tabs">
                        <ul id="myTab" class="nav1 nav1-tabs left-tab" role="tablist">
                            @*<ul id="myTab" class="nav nav-tabs left-tab" role="tablist">
                                    <li role="presentation" class="active"><a href="#home" id="home-tab" role="tab" data-toggle="tab" aria-controls="home" aria-expanded="true"><img src="images/menu1.png"></a></li>
                                    <li role="presentation"><a href="#profile" role="tab" id="profile-tab" data-toggle="tab" aria-controls="profile"><img src="images/menu.png"></a></li>
                                </ul>*@
                            <div id="myTabContent" class="tab-content">
                                <div role="tabpanel" class="tab-pane fade in active" id="home" aria-labelledby="home-tab">
                                    <div class="product-tab">
                                        @foreach (var item in Model.OrderBy(n => n.price))
                                        {
                                            <div class="col-md-3 product-tab-grid simpleCart_shelfItem" style="margin-top: 20px;">
                                                <div class="grid-arr">
                                                    <div class="grid-arrival">
                                                        <figure>
                                                            <a href="@Url.Action("XemChiTiet","Product",new { @MaSP = item.Id })" class="new-gri" data-toggle="modal" data-target="#myModal1">
                                                                <div class="grid-img">
                                                                    <img src="@Url.Content("~/Content/HinhAnhSP/"+item.image1)" class="img-responsive" alt="">
                                                                </div>
                                                                <div class="grid-img">
                                                                    <img src="@Url.Content("~/Content/HinhAnhSP/"+item.image2)" class="img-responsive" alt="">
                                                                </div>
                                                            </a>
                                                        </figure>
                                                    </div>
                                                    @*<div class="block">
                                                            <div class="starbox small ghosting"> </div>
                                                        </div>*@
                                                    <div class="women">
                                                        <h6><a href="@Url.Action("XemChiTiet","Product",new { @MaSP = item.Id })">@item.name</a></h6>
                                                        <span class="size">Oversize</span>
                                                        <p><del></del><em class="item_price">@item.price.Value.ToString("#,##") VNĐ</em> </p>
                                                        <a href="@Url.Action("ThemGioHang","GioHang",new { @MaSP=item.Id,@strURL=Request.Url.ToString()})" data-text="Add To Cart" class="my-cart-b item_add">Thêm vào giỏ</a>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        <div class="clearfix"></div>
                                    </div>

                                </div>

                            </div>
                        </ul>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
</div>

<div class="dlink" style="padding-left:100px;">
    Trang @(Model.PageCount<Model.PageNumber? 0:Model.PageNumber)/@Model.PageCount
    @Html.PagedListPager(Model, Page => Url.Action("KetQuaTimKiem", new { Page = Page, @sTuKhoa = ViewBag.TuKhoa }))
</div>
