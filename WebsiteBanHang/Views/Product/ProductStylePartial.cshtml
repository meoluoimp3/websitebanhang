@using WebsiteBanHang.Models;
@model IEnumerable<product>

<div class="arrivals-grids">
    @foreach (var item in Model.Take(4))
    {
        <div class="col-md-3 arrival-grid simpleCart_shelfItem">
        <div class="grid-arr">
            <div class="grid-arrival">
                <figure>
                    <a href="@Url.Action("XemChiTiet","Product",new { MaSP = item.Id })" class="new-gri" data-toggle="modal" data-target="#myModal1">
                        <div class="grid-img">
                            <img src="@Url.Content("~/Content/HinhAnhSP/"+item.image1)" class="img-responsive" alt="">
                        </div>
                        <div class="grid-img">
                            <img src="@Url.Content("~/Content/HinhAnhSP/"+item.image2)" class="img-responsive" alt="">
                        </div>
                    </a>
                </figure>
            </div>
            @*<div class="ribben">
                <p>NEW</p>*@
            @*</div>*@
            <div class="ribben1">
                <p>@item.sale</p>
            </div>
            <div class="block">
                <div class="starbox small ghosting"> </div>
            </div>
            <div class="women">
                <h6><a href="@Url.Action("XemChiTiet","Product",new { MaSP = item.Id })">@item.name</a></h6>
                @*<span class="size">XL / XXL / S </span>*@
                <p><del>$100.00</del><em class="item_price">@item.price</em></p>
                <a href="@Url.Action("ThemGioHang","GioHang",new { @MaSP=item.Id,@strURL=Request.Url.ToString()})"  class="my-cart-b item_add">Thêm vào giỏ hàng</a>
            </div>
        </div>
        </div>
    }

    <div class="clearfix"></div>
</div>